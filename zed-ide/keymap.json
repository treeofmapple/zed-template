[
    {
        "context": "Editor",
        "bindings": {
            "f5": [
                "task::Spawn",
                {
                    "task_name": "Java: Compile & Run Current File"
                }
            ],

            "ctrl-f2": "task::Rerun",

            "ctrl-d": "editor::DeleteLine",
            "ctrl-/": "editor::ToggleComments",
            "ctrl-x": "editor::Redo",

            "ctrl-shift-i": "outline_panel::ToggleActiveEditorPin",
            "ctrl-\\": "pane::SplitVertical",
            "alt-\\": "pane::SplitHorizontal",

            "alt-s": "go_to_line::Toggle",
            "alt-b": "workspace::ToggleRightDock",
            "ctrl-b": "outline_panel::FoldDirectory",

            "ctrl-3": "editor::GoToDefinition",
            "ctrl-2": "file_finder::Toggle",

            "alt-c": "editor::SelectAllMatches",
            "alt-d": "editor::AddSelectionAbove", // clear all cursors
            "alt-f": "editor::AddSelectionAbove",
            "alt-v": "editor::AddSelectionBelow",

            "ctrl-alt-b": null
        }
    },
    {
        "context": "Pane",
        "bindings": {
            "ctrl-1": "project_search::ToggleFocus"
        }
    },
    {
        "context": "OutlinePanel",
        "bindings": {
            "ctrl-b": "outline_panel::FoldDirectory"
        }
    },
    {
        "context": "ProjectPanel",
        "bindings": {
            "alt-b": "workspace::ToggleRightDock"
        }
    },
    {
        "context": "RunModal",
        "bindings": {
            "ctrl-tab": "pane::ActivateNextItem",
            "ctrl-shift-tab": "pane::ActivatePreviousItem"
        }
    },
    {
        "bindings": {}
    }
]
