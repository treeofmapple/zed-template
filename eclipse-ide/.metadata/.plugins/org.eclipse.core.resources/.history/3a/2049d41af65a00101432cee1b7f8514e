@Component
public class TagMapperImpl implements TagMapper {

    @Override
    public Tag build(String name) {
        if ( name == null ) {
            return null;
        }

        Tag tag = new Tag();

        tag.setName( name );

        return tag;
    }

    @Override
    public TagResponse toResponse(Tag tag) {
        if ( tag == null ) {
            return null;
        }

        Long id = null;
        String name = null;

        id = tag.getId();
        name = tag.getName();

        TagResponse tagResponse = new TagResponse( id, name );

        return tagResponse;
    }

    @Override
    public List<TagResponse> toResponseList(List<Tag> tags) {
        if ( tags == null ) {
            return null;
        }

        List<TagResponse> list = new ArrayList<TagResponse>( tags.size() );
        for ( Tag tag : tags ) {
            list.add( toResponse( tag ) );
        }

        return list;
    }

    @Override
    public void mergeFromName(Tag tags, String name) {
        if ( name == null ) {
            return;
        }

        tags.setName( name );
    }
