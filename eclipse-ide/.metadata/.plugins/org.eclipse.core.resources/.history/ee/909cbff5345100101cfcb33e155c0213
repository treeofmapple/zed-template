  datasource:
    hikari:
      max-lifetime: 270000 # 4.5 minutes (in ms)
      idle-timeout: 200000 # 4.1 minutes (should be less than maxLifetime)
      connection-timeout: 30000
      minimum-idle: 2
      maximum-pool-size: 10
      connection-test-query: SELECT 1
  jpa:
    open-in-view: false 
    hibernate:
      ddl-auto: ${DDL_AUTO:create-drop}
  flyway:
    enabled: true
    locations: classpath:db/migration
    clean-disabled: ${FLYWAY_CLEAN:false} 
    validate-on-migrate: ${FLYWAY_VALIDATE-MIGRATION:true}
    baseline-on-migrate: ${FLYWAY_BASELINE-MIGRATION:true}
    baseline-version: ${FLYWAY_VERSION:1}
		
		application:
		  page:
		    size: ${PAGE_SIZE:10}
		  cors:
		    allowed-origins: ${ALLOWED_ORIGINS}
