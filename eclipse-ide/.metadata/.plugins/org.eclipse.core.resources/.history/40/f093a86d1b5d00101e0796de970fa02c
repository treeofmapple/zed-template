package com.tom.aws.awstest.image;


import java.util.Arrays;
import java.util.List;
import java.util.UUID;
import java.util.stream.Collectors;
import java.util.stream.IntStream;

import org.springframework.beans.factory.annotation.Value;
import org.springframework.data.domain.Page;
import org.springframework.data.domain.PageRequest;
import org.springframework.data.domain.Pageable;
import org.springframework.stereotype.Service;
import org.springframework.transaction.annotation.Transactional;
import org.springframework.util.StringUtils;
import org.springframework.web.multipart.MultipartFile;

import com.tom.aws.awstest.common.AwsFunctions;
import com.tom.aws.awstest.common.SecurityUtils;
import com.tom.aws.awstest.logic.GenData;

import lombok.RequiredArgsConstructor;
import lombok.extern.log4j.Log4j2;

@Log4j2
@Service
@RequiredArgsConstructor
public class ImageService {

	@Value("${application.data.allowed}")
	private List<String> ALLOWED_IMAGE_TYPES = Arrays.asList("image/png", "image/jpeg");
	
	@Value("${application.page.size:10}")
	private int PAGE_SIZE;
	
	private final ImageRepository repository;
	private final ImageMapper mapper;
	private final ImageUtils imageUtils;
	private final AwsFunctions functions;
	private final SecurityUtils securityUtils;
	private final GenData dataGeneration;
	
	@Transactional(readOnly = true)
	public PageImageResponse findObjectByParams(int page, String imageName) {
		Pageable pageable = PageRequest.of(page, PAGE_SIZE);
		Page<Image> images = repository.findAllByName(imageName, pageable);
		return mapper.toResponse(images);
	}
	
	@Transactional
	public ImageResponse uploadObject(MultipartFile file) {
		String userIp = securityUtils.getRequestingClientIp();
		log.info("IP {} is uploading an object", userIp);

		if (file.isEmpty()) {
		    throw new IllegalArgumentException("Cannot upload an empty file.");
		}
		
		long maxSizeInBytes = 20 * 1024 * 1024;
		if (file.getSize() > maxSizeInBytes) {
			throw new IllegalArgumentException("File size exceeds the 20MB limit.");
		}
		
        if (!ALLOWED_IMAGE_TYPES.contains(file.getContentType())) {
            throw new IllegalArgumentException("Invalid file type. Only PNG and JPG images are allowed.");
        }
		
        String originalFilename = StringUtils.cleanPath(file.getOriginalFilename());
		String key = "images/" + UUID.randomUUID() + "-" + originalFilename;
		String s3Url = functions.putObject(key, file);

		var image = new Image();
		var merged = mapper.mergeData(image, file, key, s3Url);
		var imageSaved = repository.save(merged);
	    return mapper.toResponse(imageSaved);
	}

	@Transactional
	public ImageResponse downloadObject(String objectName) {
		
		return mapper.toResponse(null);
	}
	
	@Transactional
	public ImageResponse renameObject(String objectName) {
		
		return mapper.toResponse(null);
	}
	
	@Transactional
	public void removeObject(Long id, String objectName) {
		String userIp = securityUtils.getRequestingClientIp();
		log.info("IP {} is removing object", userIp);

		var 
		
        functions.deleteObject(imageToDelete.getObjectKey());

        log.info("Successfully deleted image for note: {}", noteName);

	}
	
	@Transactional
	public PageImageResponse generateImages(int quantity) {
        List<Image> imagesToSave = IntStream.range(0, quantity)
                .mapToObj(i -> dataGeneration.genImages())
                .collect(Collectors.toList());

        repository.saveAll(imagesToSave);
        
		Pageable pageable = PageRequest.of(0, PAGE_SIZE);
		Page<Image> images = repository.findAll(pageable);
		return mapper.toResponse(images);
	}
	
}
