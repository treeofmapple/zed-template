spring:
  datasource:
    hikari:
      max-lifetime: 1800000 # 30 minutes (in ms)
      idle-timeout: 600000 # 10 minutes (should be less than maxLifetime)
      connection-timeout: 30000 # 30 seconds
      minimum-idle: 5
      maximum-pool-size: 20
      pool-name: "ProdDBPool"
      connection-test-query: SELECT 1
  jpa:
    open-in-view: false 
    hibernate:
      ddl-auto: validate
    properties:
      hibernate:
        jdbc:
          batch_size: 50
  flyway:
    enabled: true
    locations: classpath:db/migration
    clean-disabled: true 
    validate-on-migrate: true
    # Always on first run should be false
    baseline-on-migrate: ${FLYWAY_BASELINE-MIGRATION:false} 
    baseline-version: ${FLYWAY_VERSION:1}

application:
  page:
    size: ${PAGE_SIZE:10}
  cors:
    allowed-origins: ${ALLOWED_ORIGINS}
    time: ${CORS_TIME:3600}
  rate:
    limit: ${RATE_LIMIT:20}
    refil:
      time: ${REFIL_TIME:30S}