package server;

import server.util.MultiThread;
import server.util.SingleThread;
import server.util.ThreadPooled;

public class Main extends Operations {

	public static void main(String[] args) {
		SingleThreadServer();
	}
	
	
}


class Operations {
	
	public static void SingleThreadServer() {
		SingleThread st = new SingleThread(9000);
		new Thread(st).start();
		
		try {
			Thread.sleep(10*1000);
		} catch(InterruptedException e) {
			e.printStackTrace();
		}
		
		System.out.println("Stopping Server");
		st.stop();
	}

	public static void MultiThreadServer() {
		MultiThread mt = new MultiThread(9001);
		
		new Thread(mt).start();
		try {
			Thread.sleep(10*1000);
		} catch(InterruptedException e) {
			e.printStackTrace();
		}
		System.out.println("Stopping Server");
		mt.stop();
		
	}

	
	public static void ThreadPooledServer() {
		ThreadPooled tp = new ThreadPooled(9002);
		
		new Thread(tp).start();
		try {
			Thread.sleep(10*1000);
		} catch(InterruptedException e) {
			e.printStackTrace();
		}
		System.out.println("Stopping Server");
		tp.stop();
	}
	
	
}